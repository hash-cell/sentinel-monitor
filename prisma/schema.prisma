generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MonitorLog {
  id        String   @id @default(uuid())
  url       String
  status    String   // "UP" ou "DOWN"
  latency   Int      // Tempo em ms
  statusCode Int     // 200, 404, 500...
  timestamp DateTime @default(now()) // Hora exata da verificação

  @@map("logs")
}